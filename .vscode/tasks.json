{
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DEVQ_LOG_LEVEL=6",
                "-DEVQ_LOG_LEVEL_MAX=6"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "configure"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build",
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "launch-valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "${workspaceFolder}/build/evq_sample"
            ],
            "dependsOn": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "clear": true
            }
        }
    ],
    "version": "2.0.0"
}