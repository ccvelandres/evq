{
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset=debug",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "configure"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build",
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "launch-valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "${workspaceFolder}/build/evq_sample"
            ],
            "dependsOn": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "dfu-util-stm32f411",
            "type": "shell",
            "command": "dfu-util",
            "args": [
                "-a", "0",
                "-d", "0483:df11",
                "-s", "0x08000000:leave",
                "-D", "build/evq_example_stm32f411.bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}/examples/stm32f411"
            },
            "group": "none",
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}