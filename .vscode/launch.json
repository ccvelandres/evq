{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "example",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/${input:sampleTarget}",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build"
        },
        {
            "name": "(valgrind) evq_sample",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/evq_sample",
            "targetArchitecture": "x64",
            "customLaunchSetupCommands": [
                {
                    "description": "attach to valgrind",
                    "text": "target remote | /usr/lib/valgrind/../../bin/vgdb"
                }
            ],
            "args": [],
            "cwd": "${workspaceFolder}/build"
        },
        {
            "name": "test_evq",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_evq",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build"
        },
        {
            "name": "test_evq_log",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_evq_log",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build"
        },
        {
            "name": "example/stm32f411",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "bmp",
            "BMPGDBSerialPort": "com5",
            "interface": "swd",
            "powerOverBMP": "disable",
            "svdFile": "${workspaceFolder}/examples/stm32f411/stm32f411.svd",
            "executable": "${workspaceFolder}/examples/stm32f411/build/evq_example_stm32f411",
            "cwd": "${workspaceFolder}/examples/stm32f411/",
        }
    ],"inputs": [
        {
            "id": "sampleTarget",
            "type": "pickString",
            "description": "Pick sample target to run and debug",
            "options": [
                "evq_sample_direct",
                "evq_sample_event"
            ],
            "default": "evq_sample_direct"
        }
    ]
}